@page
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Prime Checker!</h1>
    <p>
        <form method="post">
            Number to test: <input asp-for="Number" />
            <input type="submit" />
            @if (Model.IsPrime.HasValue) {
                if (Model.IsPrime.Value) {
                    <p>@Model.Number is Prime!</p>
                } else {
                    <p>@Model.Number is not Prime!</p>
                }
            }
        </form>
    </p>
</div>
